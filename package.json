{
  "name": "vibetty",
  "displayName": "VibeTTY",
  "description": "Bring VibeOps workflows to network and systems administration - AI-assisted SSH/Telnet/Serial management",
  "version": "0.2.0",
  "publisher": "torbjorn-dev",
  "license": "MIT",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/torbbang/vibetty.git"
  },
  "bugs": {
    "url": "https://github.com/torbbang/vibetty/issues"
  },
  "homepage": "https://github.com/torbbang/vibetty#readme",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "keywords": [
    "ssh",
    "telnet",
    "serial",
    "terminal",
    "network",
    "cisco",
    "juniper",
    "fortinet",
    "networking",
    "ai",
    "llm",
    "automation",
    "devops",
    "infrastructure",
    "mcp",
    "claude"
  ],
  "preview": true,
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "bin": {
    "vibetty-mcp": "./out/mcp/cli.js"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vibetty-sidebar",
          "title": "VibeTTY",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "vibetty-sidebar": [
        {
          "id": "vibetty-sessions",
          "name": "SSH Sessions"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "vibetty-sessions",
        "contents": "No connections found. Click the '+' button to add a new connection.",
        "when": "!config:vibetty.connections.length"
      }
    ],
    "commands": [
      {
        "command": "vibetty.connect",
        "title": "Connect to Host",
        "category": "VibeTTY"
      },
      {
        "command": "vibetty.refresh",
        "title": "Refresh Sessions",
        "category": "VibeTTY"
      },
      {
        "command": "vibetty.checkConfig",
        "title": "Check MCP Configuration",
        "category": "VibeTTY"
      },
      {
        "command": "vibetty.configureMcp",
        "title": "Configure MCP Client",
        "category": "VibeTTY"
      },
      {
        "command": "vibetty.editHost",
        "title": "Edit Connection Settings",
        "category": "VibeTTY"
      },
      {
        "command": "vibetty.copyConnection",
        "title": "Copy Connection",
        "category": "VibeTTY"
      },
      {
        "command": "vibetty.addHost",
        "title": "Add New Connection",
        "icon": "$(add)",
        "category": "VibeTTY"
      },
      {
        "command": "vibetty.deleteHost",
        "title": "Delete Connection",
        "category": "VibeTTY"
      },
      {
        "command": "vibetty.viewNotes",
        "title": "View Notes",
        "category": "VibeTTY"
      },
      {
        "command": "vibetty.enableStrictMode",
        "title": "Enable Strict Mode (Require approval for all LLM interactions)",
        "category": "VibeTTY Security"
      },
      {
        "command": "vibetty.disableStrictMode",
        "title": "Disable Strict Mode",
        "category": "VibeTTY Security"
      },
      {
        "command": "vibetty.strictModeStatus",
        "title": "Check Strict Mode Status",
        "category": "VibeTTY Security"
      },
      {
        "command": "vibetty.toggleStrictMode",
        "title": "Toggle Strict Mode",
        "category": "VibeTTY Security"
      },
      {
        "command": "vibetty.showSecretStats",
        "title": "Show Filtered Secrets",
        "category": "VibeTTY Security"
      },
      {
        "command": "vibetty.resetOnboarding",
        "title": "Reset Onboarding Tutorial",
        "category": "VibeTTY Security"
      },
      {
        "command": "vibetty.enableLogging",
        "title": "Enable Session Logging",
        "category": "VibeTTY"
      },
      {
        "command": "vibetty.disableLogging",
        "title": "Disable Session Logging",
        "category": "VibeTTY"
      },
      {
        "command": "vibetty.openLogFolder",
        "title": "Open Log Folder",
        "category": "VibeTTY"
      },
      {
        "command": "vibetty.startSubSession",
        "title": "Start Sub-Session",
        "category": "VibeTTY"
      },
      {
        "command": "vibetty.endSubSession",
        "title": "End Sub-Session",
        "category": "VibeTTY"
      }
    ],
    "configuration": {
      "title": "VibeTTY",
      "properties": {
        "vibetty.connections": {
          "type": "array",
          "default": [],
          "description": "List of SSH, Telnet, and Serial connections",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Connection name"
              },
              "type": {
                "type": "string",
                "enum": [
                  "ssh",
                  "telnet",
                  "serial"
                ],
                "description": "Connection type"
              },
              "hostname": {
                "type": "string",
                "description": "Hostname or IP address (SSH/Telnet)"
              },
              "port": {
                "type": "number",
                "description": "Port number"
              },
              "user": {
                "type": "string",
                "description": "Username (SSH only)"
              },
              "device": {
                "type": "string",
                "description": "Serial device path (Serial only)"
              },
              "baud": {
                "type": "number",
                "description": "Baud rate (Serial only)"
              },
              "folder": {
                "type": "string",
                "description": "Folder to organize connection"
              },
              "device_type": {
                "type": "string",
                "description": "Device type (cisco_ios, cisco_ios-xe, generic)"
              },
              "enableLogging": {
                "type": "boolean",
                "description": "Enable session logging for this connection"
              }
            },
            "required": [
              "name",
              "type"
            ]
          }
        },
        "vibetty.security.strictMode": {
          "type": "boolean",
          "default": false,
          "description": "Strict Mode: Require manual approval for every LLM interaction (output reads and command sends)"
        },
        "vibetty.logging.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable session logging globally (can be overridden per-connection)"
        },
        "vibetty.logging.directory": {
          "type": "string",
          "default": "~/.vibetty/logs",
          "description": "Directory where session logs are stored"
        },
        "vibetty.ssh.serverAliveInterval": {
          "type": "number",
          "default": 60,
          "description": "Sets the ServerAliveInterval option for SSH connections, preventing disconnects on idle. Value is in seconds. Set to 0 to disable."
        },
        "vibetty.ssh.connectTimeout": {
          "type": "number",
          "default": 10,
          "description": "Sets the ConnectTimeout option for SSH connections. SSH will fail quickly if the host is unreachable. Value is in seconds. Set to 0 to disable (use system default)."
        },
        "vibetty.ssh.enableReactiveAuth": {
          "type": "boolean",
          "default": false,
          "description": "Show VSCode input boxes for SSH authentication prompts (passwords, passphrases, 2FA). With node-pty, manual terminal input works great, so this is disabled by default."
        },
        "vibetty.highlighting.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable keyword highlighting in terminal output"
        },
        "vibetty.highlighting.customKeywordFile": {
          "type": "string",
          "default": "",
          "description": "Path to custom keyword highlight file (SecureCRT .ini format). Leave empty to use device-specific defaults."
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "vibetty.addHost",
          "when": "view == vibetty-sessions",
          "group": "navigation@0"
        },
        {
          "command": "vibetty.toggleStrictMode",
          "when": "view == vibetty-sessions",
          "group": "navigation@1",
          "icon": "$(shield)"
        }
      ],
      "view/item/context": [
        {
          "command": "vibetty.connect",
          "when": "view == vibetty-sessions && viewItem =~ /^(ssh|telnet|serial)Connection$/",
          "group": "navigation"
        },
        {
          "command": "vibetty.editHost",
          "when": "view == vibetty-sessions && viewItem =~ /^(ssh|telnet|serial)Connection$/",
          "group": "navigation"
        },
        {
          "command": "vibetty.copyConnection",
          "when": "view == vibetty-sessions && viewItem =~ /^(ssh|telnet|serial)Connection$/",
          "group": "navigation"
        },
        {
          "command": "vibetty.viewNotes",
          "when": "view == vibetty-sessions && viewItem =~ /^(ssh|telnet|serial)Connection$/",
          "group": "navigation"
        },
        {
          "command": "vibetty.deleteHost",
          "when": "view == vibetty-sessions && viewItem =~ /^(ssh|telnet|serial)Connection$/",
          "group": "manage"
        }
      ],
      "terminal/context": [
        {
          "command": "vibetty.enableLogging",
          "group": "vibetty@1"
        },
        {
          "command": "vibetty.disableLogging",
          "group": "vibetty@2"
        },
        {
          "command": "vibetty.openLogFolder",
          "group": "vibetty@3"
        },
        {
          "command": "vibetty.startSubSession",
          "group": "vibetty@4"
        },
        {
          "command": "vibetty.endSubSession",
          "group": "vibetty@5"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.0",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.3.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "toml": "^3.0.0"
  }
}
